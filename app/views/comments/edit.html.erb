<div class="row">
  <div class="col-lg-8">
    <h1 class="mt-4"><%= @article.title %></h1>
    <p class="lead">
      by
      <%= link_to @article.user.username , user_profile_path(@article.user.username) %>
    </p>
    <hr>
    <p>Posted on <%= @article.created_at.strftime("%B %d, %Y") %></p>
    <hr>
    <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
    <hr>
    <p class="lead"><%= @article.content %></p>
    <hr>

<%= render 'form', comment: @comment %>

</div>

  <!-- Sidebar Widgets Column -->
  <div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
      <h5 class="card-header">Search</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-append">
            <button class="btn btn-secondary" type="button">Go!</button>
          </span>
        </div>
      </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
      <h5 class="card-header">Categories</h5>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="#">Web Design</a>
              </li>
              <li>
                <a href="#">HTML</a>
              </li>
              <li>
                <a href="#">Freebies</a>
              </li>
            </ul>
          </div>
          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="#">JavaScript</a>
              </li>
              <li>
                <a href="#">CSS</a>
              </li>
              <li>
                <a href="#">Tutorials</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <%= render 'comments/comments', comment: @comments%>
  </div>
</div>
